<% if current_user %>
	<h1> Welcome to Shoppr <%= link_to current_user.email, user_path(current_user.id)%></h1>
 	<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
<% else%>
	<p><%= link_to "Register", new_user_registration_path%></p>
	<p><%= link_to('Login', new_user_session_path)  %> </p>
	<h1> Welcome to Shoppr! Please log in or register</h1>
<% end%>
<%=form_tag searches_path, class: "search-form-box", method: :post do%>
	<%=text_field_tag(:query, params[:query])%>
 	<%=submit_tag("Search")%>
	<%=link_to "clear", searches_path%>
<%end%>